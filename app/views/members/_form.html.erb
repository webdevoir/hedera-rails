<%= form_for member, html: { multipart: true, class: "form" } do |f| %>
  <div>
    <%= f.label :active %>
    <%= f.check_box :active %>
  </div>
  <div>
    <%= f.label :status_id, "Status" %>
    <%= f.select :status_id, options_for_statuses, label: "Status" %>
  </div>
  <div>
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :phone %>
    <%= f.telephone_field :phone %>
  </div>
  <div>
    <%= f.label :address %>
    <%= f.text_field :address %>
  </div>
  <div>
    <%= f.label :bio %>
    <%= f.text_area :bio, rows: "10" %>
  </div>
  <div>
    <%= f.label :bibliography %>
    <%= f.url_field :bibliography %>
  </div>
  <% if member.member_pic.present? %>
    <%= image_tag member.member_pic.url(:medium) %>
  <% end %>
  <div>
    <%= f.label :member_pic %>
    <%= f.file_field :member_pic %>
  </div>
  <div>
     <%= f.label "Research" %>
     <%= f.collection_check_boxes :project_ids, Project.all, :id, :title do |b| %>
       <%= b.label() { b.check_box + b.text} %>
     <% end %>
  </div>
  <div>
    <%= f.submit %>
    <% if member.new_record? %>
      <%= link_to "Cancel", members_path %>
    <% else %>
      <%= link_to "Cancel", member_path(member) %>
    <% end %>
  </div>
<% end %>
