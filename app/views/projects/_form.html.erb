<%= form_for project, html: { class: "form" } do |f| %>
  <div>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </div>
  <div>
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>
  <div>
    <%= f.label :contact %>
    <%= f.text_field :contact %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.submit %>
    <% if project.new_record? %>
      <%= link_to "Cancel", projects_path %>
    <% else %>
      <%= link_to "Cancel", project_path(project) %>
    <% end %>
  </div>
<% end %>
