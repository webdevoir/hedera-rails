<div class="research">
  <header class="pageheader">
        <h1>Research</h1>
  </header>
  <% if user_signed_in? %>
    <div class="edit">
      <p><i class="fa fa-plus"></i><%= link_to "Create Project", new_project_path %></p>
    </div>
  <% end %>
  <section class="health-sociology">
    <%= image_tag "health-sociology.jpg" %>
    <h2>HEALTH SOCIOLOGY</h2>
    <p>the study of formal health care – the organization of health care – and its consequences for the mental wellbeing of clients</p>
    <% if @projects %>
      <h3>PROJECTS</h3>
      <ul>
        <% @projects.each do |project| %>
          <% if project.project_category.name == "health sociology" %>
            <li><%= link_to project.title, project %></li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  </section><!-- health-sociology -->
<section class="ethnic-diversity">
    <%= image_tag "ethnic-diversity.jpg" %>
    <h2>ETHNIC DIVERSITY</h2>
    <p>the study of informal social networks of ethno cultural minorities and their impact on structural and socio-cultural integration</p>
    <h3>PROJECTS</h3>
    <ul>
        <% @projects.each do |project| %>
          <% if project.project_category.name == "ethnic diversity" %>
            <li><%= link_to project.title, project %></li>
          <% end %>
        <% end %>
    </ul>
</section><!-- health-sociology -->
</div><!-- .research -->
