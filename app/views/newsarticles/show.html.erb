<article class="news-item">
  <div class="breadcrumb">
    <ul>
      <li><%= link_to "News", newsarticles_path %> > </li>
      <li><%= @newsarticle.title %></li>
    </ul>
  </div>
  <header class="pageheader">
    <h1><%= @newsarticle.title %></h1>
  </header>
  <footer class="article">
    <p>
    <% if @newsarticle.date.present? %>
      <time>
        <%= @newsarticle.date.strftime('%d %B %Y') %>
      </time><br>
    <% end %>
    <% if @newsarticle.location.present? %>
      <i class="fa fa-map-marker"></i><%= @newsarticle.location %><br>
    <% end %>
    <% if @newsarticle.newsarticle_doc.present? %>
      <i class="fa fa-download"></i><%= link_to "Download", @newsarticle.newsarticle_doc.url %></p>
    <% end %>
  </footer>
  <div class="content">
    <%= simple_format(@newsarticle.body) %>
    <% if @newsarticle.link.present? %>
      <p>link: <%= link_to @newsarticle.link, @newsarticle.link %></p>
    <% end %>
  </div><!-- .content -->
  <aside>
    <%= image_tag @newsarticle.newsarticle_pic.url(:large) %>
  </aside>
  <% if user_signed_in? %>
    <div class="edit">
      <p><i class="fa fa-pencil"></i><%= link_to "Edit newsarticle", edit_newsarticle_path(@newsarticle) %> &nbsp;&nbsp;<i class="fa fa-trash"></i><%= link_to "Delete", newsarticle_path(@newsarticle), method: :delete, data: { confirm: "Are you sure?" } %></p>
    </div>
  <% end %>
</article>


