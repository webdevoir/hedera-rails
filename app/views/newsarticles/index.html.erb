<div class="newsarticles">
  <h1>News</h1>
  <p><%= link_to "Create newsarticle", new_newsarticle_path %></p>
  <% @newsarticles.each do |article| %>
    <article>
      <header>
        <h2><%= link_to article.title, newsarticle_path(article) %></h2>    
      </header>
      <%= simple_format(article.body) %>
      <aside>
        <p><%= image_tag article.newsarticle_pic.url(:medium) %></p>
      </aside>
    </article>
  <% end %>
</div>
