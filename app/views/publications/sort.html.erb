<div class="publications">
  <header class="pageheader">
    <h1>Publications: <%= @category.name %></h1>
  </header>
  <div class="breadcrumb">
    <ul>
      <li><%= link_to "Publications", publications_path %> > </li>
      <li><%= @category.name %></li>
    </ul>
  </div>
  <% if @publications.any? %>
    <div class="publications-list">
      <% @publications.each do |year, publications| %>
          <h2><%= year %></h2>
          <ul>
            <% publications.each do |publication| %>
              <li><%= link_to format_publication(publication), publication %></li>
            <% end %>
          </ul>
      <% end %>
    </div>
  <% end %>
</div>
